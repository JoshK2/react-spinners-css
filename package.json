{
  "name": "react-spinners-css",
  "version": "2.0.0",
  "private": false,
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JoshK2/react-spinners-css"
  },
  "homepage": "https://bit.dev/joshk/react-spinners-css",
  "keywords": [
    "react-spinners",
    "react-spinner",
    "loadingio",
    "loading-animations",
    "loaders",
    "css-animations",
    "reactjs",
    "component",
    "react-component",
    "react",
    "spinner",
    "spinners",
    "loading",
    "loader",
    "progress",
    "activity"
  ],
  "author": "JoshK2",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:lib": "rm -rf lib && npm run build:esm && npm run build:cjs && node copyfiles.js",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "build:bit": "rm -rf dist && bit build",
    "format": "prettier --write \"src/**/*.tsx\" \"src/**/*.ts\"",
    "deploy:npm": "npm publish",
    "deploy:bit": "bit export joshk.react-spinners-css"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
